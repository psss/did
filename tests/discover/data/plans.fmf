execute:
    how: tmt

/smoke:
    provision:
        how: local
    execute:
        script: tmt --help

/tests:
    provision:
        how: local
    discover:
        how: shell
        tests:
          - name: second
            order: 15
            test: echo
          - name: first
            test: 'false'
            order: 10
            recommend:
              - tmt
            # fmf-id in require/recommend doesn't work
            #require:
            #- url: https://github.com/teemtee/tmt
            adjust:
              - when: some_dimension is defined
                enabled: false
            description: This is a description
            id: "0000-0000-0000-0000"
            link:
              - https://github.com/teemtee/tmt/pull/1461
            tag:
              - yes
            tier: 3
            component:
              - tmt
            contact: me@localhost.localdomain
            duration: 10h
            environment:
                FOO: bar
            framework: shell
            path: /
            result: xfail
            summary: Concise summary

/fmf:
    /url:
        /ref:
            /path:
                discover:
                    how: fmf
                    url: https://github.com/teemtee/tmt
                    ref: eae4d52
                    path: /examples/together
            /nopath:
                discover:
                    how: fmf
                    url: https://github.com/teemtee/tmt
                    ref: 5407fe5
        /noref:
            /path:
                discover:
                    how: fmf
                    url: https://github.com/teemtee/tmt
                    path: /examples/together

            /nopath:
                discover:
                    how: fmf
                    url: https://github.com/teemtee/tmt
        /parametrize:
            /environment:
                environment:
                    REPO: tmt
                discover:
                    how: fmf
                    url: https://github.com/teemtee/$REPO
            /noenvironment:
                discover:
                    how: fmf
                    url: https://github.com/teemtee/${REPO}
            /context:
                context:
                    repo: tmt
                discover:
                    how: fmf
                    url: https://github.com/teemtee/$@repo
            /nocontext:
                discover:
                    how: fmf
                    url: https://github.com/teemtee/$@{repo}
            /combined:
                context:
                    prefix: tee
                environment:
                    SUFFIX: mtee
                discover:
                    how: fmf
                    url: https://github.com/teemtee/$@prefix$SUFFIX
            /conflict:
                context:
                    VAR: foo
                environment:
                    VAR: bar
                discover:
                    how: fmf
                    url: https://github.com/teemtee/$@{VAR}${VAR}

    /nourl:
        /ref:
            /path:
                discover:
                    how: fmf
                    ref: eae4d52
                    path: (overriden by --path)
            /nopath:
                discover:
                    how: fmf
                    ref: 5407fe5
        /noref:
            /path:
                discover:
                    how: fmf
                    path: (overriden by --path)
            /nopath:
                discover:
                    how: fmf
    /modified:
        discover:
            how: fmf
            path: ../../..
            ref: 8329db0
            modified-only: true
            modified-ref: 8329db0^

    /distgit:
        summary: Extract distgit sources
        discover:
            how: fmf
            dist-git-source: true
            dist-git-init: false
            test: tests/prepare/install$

    /exclude:
        discover:
            how: fmf
            exclude: /tests/discover1

    /dynamic-ref:
        /no-context:
            discover:
                how: fmf
                ref: "@tests/discover/data/dynamic-ref.fmf"
        /with-context:
            context:
                branch: fedora
            discover:
                how: fmf
                ref: "@tests/discover/data/dynamic-ref.fmf"
